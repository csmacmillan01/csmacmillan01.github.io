---
const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title || "Cole S. MacMillan"}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      :root {
        --wm-green: #115740;
        --wm-gold: #C5B358;
        --bg-main: #e6e8ea;
        --bg-card: #f2f3f4;
        --bg-header: #dcdfe2;
        --text-dark: #1c1c1c;
      }

      body {
        margin: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        background-color: var(--bg-main);
        color: var(--text-dark);
      }

      header {
        background-color: var(--bg-header);
        padding: 2rem 1.5rem 1rem 1.5rem;
      }

      .header-content {
        max-width: 1000px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        gap: 1.5rem;
      }

      .headshot {
        width: 120px;
		height: 120px;
		border-radius: 16px;
		object-fit: cover;
		border: 3px solid var(--wm-green);
      }

      .title-block h1 {
        margin: 0;
        color: var(--wm-green);
        font-size: 1.8rem;
      }

      .title-block p {
        margin: 0.3rem 0;
      }

      nav {
        max-width: 1000px;
        margin: 1.5rem auto 0 auto;
        display: flex;
        gap: 2rem;
        border-bottom: 2px solid var(--wm-gold);
        padding-bottom: 0.5rem;
      }

      nav a {
        text-decoration: none;
        color: var(--text-dark);
        font-weight: 500;
        position: relative;
      }

      nav a:hover {
        color: var(--wm-green);
      }

      main {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: var(--bg-card);
        border-radius: 10px;
      }

      footer {
        text-align: center;
        padding: 2rem 1rem;
        font-size: 0.9rem;
        color: #555;
      }
	
	  nav a {
		text-decoration: none;
		color: var(--text-dark);
		font-weight: 500;
		padding: 0.4rem 0.8rem;
		border-radius: 8px;
		transition: all 0.2s ease;
		}

		nav a:hover {
		color: var(--wm-green);
		background-color: rgba(17, 87, 64, 0.08);
		}

		nav a.active {
		background-color: rgba(17, 87, 64, 0.12);
		color: var(--wm-green);
		font-weight: 600;
		}

    </style>
  </head>

  <body>
    <header>
      <div class="header-content">
        <img src="/headshot.jpg" alt="Headshot of Cole MacMillan" class="headshot" />
        <div class="title-block">
          <h1>Cole S. MacMillan</h1>
          <p>Senior at William & Mary studying Finance and Data Science</p>
          <p>3.81 GPA | BBA Finance | Data Science Minor | Business Analytics Concentration | Spring 2026</p>
        </div>
      </div>

      <nav>
        <a href="/" class={currentPath === "/" ? "active" : ""}>Professional</a>
  		<a href="/wm" class={currentPath === "/wm" ? "active" : ""}>W&M</a>
  		<a href="/beyond" class={currentPath === "/beyond" ? "active" : ""}>Beyond</a>
  		<a href="/connect" class={currentPath === "/connect" ? "active" : ""}>Connect</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      Site last updated Spring 2026
    </footer>
  </body>
</html>